<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3" >
      <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="md-3">
                <label for="username" class="form-label">username</label>
                <input id="username" name="username" class="form-control" type="text" required />
                <div class="valid-feedback"> look good!</div>
              </div>

              <div class="md-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" class="form-control" type="email" required />
              </div>

              <div class="md-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" class="form-control" type="password" required />
              </div>

              <button class="btn-dark btn mt-4 mb-4 add-btn">Sign Up</button>
        </form>
    </div>
</div>